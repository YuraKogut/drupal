{%
  set classes = [
  'region',
  'region-' ~ region|clean_class,
]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
   <div class="burger-filter">
          <span></span>
      </div>
   <div class = "filter-title">
  {{ 'Filter by'|t}}
  </div>
    {{ content }}
  </div>
{% endif %}
